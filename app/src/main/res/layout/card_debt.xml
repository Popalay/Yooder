<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/progress"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        tools:background="@color/red" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="24dp"
        android:paddingTop="8dp">

        <TextView
            android:gravity="center"
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_money_small"
            android:textColor="@color/oil"
            android:textSize="@dimen/large_text_size"
            tools:text="50" />

        <TextView
            android:id="@+id/party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/amount"
            android:textColor="@color/oil"
            android:textSize="@dimen/large_text_size"
            tools:text="from Denis" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amount"
            android:layout_alignParentStart="true"
            tools:text="Взял чтобы похавать в универе булочку" />

        <TextView
            android:id="@+id/date"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/description"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:drawableEnd="@drawable/ic_date_small"
            android:gravity="center"
            tools:text="23.11.2015 " />

    </RelativeLayout>

</android.support.v7.widget.CardView>