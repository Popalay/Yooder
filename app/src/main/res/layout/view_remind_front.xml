<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="@dimen/padding_1x">

    <ImageView
        android:id="@+id/priorityBg"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/circle"
        android:tint="@color/green" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        tools:background="@color/white" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/photo"
        android:layout_alignTop="@id/photo"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@id/priorityBg"
        android:layout_toStartOf="@+id/time"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        tools:text="Denis Nikiforov" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/message"
        android:layout_alignParentEnd="true"
        tools:text="5 PM" />

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priorityBg"
        android:layout_marginTop="@dimen/padding_2x"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </LinearLayout>

</RelativeLayout>